<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ejercicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.dev4u.hv.guia5_ejemplo.EjercicioActivity">

    <Button
        android:id="@+id/btnCentro"
        android:layout_width="95dp"
        android:layout_height="65dp"
        android:layout_alignTop="@+id/btnIzquerda"
        android:layout_toEndOf="@+id/btnIzquerda"
        android:background="@drawable/fondo_boton"
        android:text="CENTRO"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnIzquerda"
        android:layout_width="95dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="33dp"
        android:background="@drawable/fondo_boton"
        android:text="IZQ"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnDerecha"
        android:layout_width="95dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnCentro"
        android:background="@drawable/fondo_boton"
        android:text="DER"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/ivCinta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="132dp"
        app:srcCompat="@drawable/cinta" />

    <ImageView
        android:id="@+id/ivCoronaDer"
        android:layout_width="79dp"
        android:layout_height="122dp"
        android:layout_alignTop="@+id/ivCoronaIzq"
        android:layout_toEndOf="@+id/ivCoronaCent"
        app:srcCompat="@drawable/corona" />

    <ImageView
        android:id="@+id/ivCoronaCent"
        android:layout_width="79dp"
        android:layout_height="122dp"
        android:layout_alignTop="@+id/ivCoronaIzq"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/corona" />

    <ImageView
        android:id="@+id/ivCoronaIzq"
        android:layout_width="79dp"
        android:layout_height="122dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="72dp"
        android:layout_toStartOf="@+id/btnCentro"
        app:srcCompat="@drawable/corona" />
</RelativeLayout>
